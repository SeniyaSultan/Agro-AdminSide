# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Option 1: Local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/farmer_db

# Option 2: MongoDB Atlas with SRV (if DNS works)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/farmer_db?retryWrites=true&w=majority

# Option 3: MongoDB Atlas without SRV (fallback)
# MONGODB_URI=mongodb://username:password@cluster-shard-00-00.mongodb.net:27017,cluster-shard-00-01.mongodb.net:27017,cluster-shard-00-02.mongodb.net:27017/farmer_db?ssl=true&replicaSet=Cluster-shard-0&authSource=admin&retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (for password reset)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
